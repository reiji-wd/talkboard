<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
    <a href="<%= root_path %>" class="navbar-brand">Talkboard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
<% if logged_in? %>      
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item"><a href="<%= new_room_path %>" class="nav-link">新規作成</a></li>
        <li class="nav-item dropdown">
          <% if current_user.image.file == nil %>
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown"><img class="rounded-circle" src="<%= gravatar_url(current_user, { size: 25 }) %>" alt=""></a>
          <% else %>
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown"><%= image_tag current_user.image.to_s,  class: 'rounded-circle',size: '25x25' %></a>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" >
 
            <%= link_to current_user.name, user_path(current_user), class: 'dropdown-item' %>
            <%= link_to 'ログアウト', logout_path, method: :delete, class: 'dropdown-item' %>
            <%= link_to 'アカウント削除', user_path(current_user), method: :delete, data: { confirm: 'このアカウントを削除してもよろしいですか？' }, class: 'dropdown-item text-danger' %>

          </div>
        </li>
      </ul>
    </div>
  </nav>
<% end %>
</header>