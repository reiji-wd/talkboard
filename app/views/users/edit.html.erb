<h2 class="text-center mt-4 mb-4 text-muted">ユーザ情報編集</h2>
<div class="row">
  
  <div class="col-10 offset-1 col-sm-6 offset-sm-3 border mb-3">
    
    <div class="mt-3 mb-3 text-center">
      <% if @user.image.file == nil %>
        <img class="rounded-circle" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
      <% else %> 
        <%= image_tag @user.image.to_s,  class: 'rounded-circle',size: '100x100' %>
      <% end %>
    </div>

    <div class="col-sm-12">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :name, 'ユーザ名' %>
          <%= f.text_field :name, value: @user.name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile, 'プロフィール' %>
          <%= f.text_area :profile, value: @user.profile, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :image, 'アイコン'%>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, value: @user.email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード確認' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        
        <div class="text-center mb-3">
          <%= f.submit '更新する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>


  </div>
  
</div>