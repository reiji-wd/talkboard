<h2 class="text-center mt-4 mb-4 text-muted">ユーザ情報</h2>
<div class="row">
  <div class="col-10 offset-1 col-sm-6 offset-sm-3 border">
    
    <div class="mt-3 mb-3 text-center">
      <% if @user.image.file == nil %>
        <img class="rounded-circle" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
      <% else %>
        <%= image_tag @user.image.to_s,  class: 'rounded-circle',size: '100x100' %>
      <% end %>
    </div>
    
    <h4><%= @user.name %></h4>
  
    <div class="mb-3">
      <%= @user.profile %>
    </div>
  </div>
</div> 

<div class="float-center text-center mt-4">
  <% if current_user.id == @user.id %>
    <%= link_to 'ユーザー情報を編集する', edit_user_path(@user) %>
  <% end %>
</div>
